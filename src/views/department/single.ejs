<%- contentFor('body') %>

<div class="row">
<div class="col-md">
    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title">Department</h3>

        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fas fa-minus"></i></button>
        </div>
      </div>
      <div class="card-body">
        <form action="/department/create" enctype="application/x-www-form-urlencoded" method="post"
        <% if (department) { %>

          <input name="departmentId" type="hidden" value="<%= department.id%>">
        <%}%>
        <div class="form-group">
          <label for="inputName">Department Name</label>
          <input name="departmentName" type="text" id="inputName" value="<%=department.name || ''%>" required="required" class="form-control">
        </div>

        <div class="form-group">
          <label for="inputName">Budget</label>
          <input name="departmentBudget" type="text" id="inputName" value="<%=department.budget || ''%>"  required="required" class="form-control">
        </div>
    
        
        <div class="form-group">
          <label>Branch</label>
          <select name="branch" disabled class="form-control select2bs4" style="width: 100%;">
            <option selected="selected">Default</option>
          </select>
        </div>


        <div class="form-group">
          <input type="submit" value="Create Record" class="btn btn-success float-right">
        </div>
        </form>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>

<%-contentFor('styles')%>


<%-contentFor('scripts')%>