<%- contentFor('body') %>
<% const role = {} %>
<div class="row">
<div class="col-md">
    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title">Department</h3>

        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fas fa-minus"></i></button>
        </div>
      </div>
      <div class="card-body">
        <form action="" method="post">
          
          <div class="form-group">
          <label for="roleName">Role Name</label>
          <input name="roleName" type="text" id="roleName" value="<%= role.role %>" readonly required="required" class="form-control">
        </div>

        
        <div class="form-group">
          <label>Job Title</label>
          <select name="jobTitle" class="form-control select2bs4" style="width: 100%;">
           <% for(const job of jobs)  {%>
            <option value="<%=job.val%>"><%=job.lbl%></option>
            <% } %>
          </select>
        </div>


        <div class="form-group">
          <input type="submit" value="Add Job Title" class="btn btn-success float-right">
        </div>
        </form>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>


<%-contentFor('styles')%>


<%-contentFor('scripts')%>