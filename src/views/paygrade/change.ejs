<%- contentFor('body') %>

<div class="row">
  <div class="col-md">
    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title">PayGrade LeaveLimit</h3>

        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fas fa-minus"></i></button>
        </div>
      </div>
      <div class="card-body">
        <form action="/paygrade/changeleavelimit" enctype="application/x-www-form-urlencoded"  method="post">

        <div class="form-group"> 
            <label for="paygradeType">Paygrade Type</label>
            <select name="paygradeType" id="paygradeType"  required class="form-control custom-select">
                <option selected disabled>Select one</option>
                <option value='annual'>Annual</option>
                <option value='maternity'>Maternity</option>
                <option value='casual'>Casual</option>
                <option value='nopay'>Nopay</option>
            </select>
        </div>

        <div class="form-group">
          <label for="inputName">Pay Grade Name</label>
          <input name="payGradeName" ype="text" id="inputName" value="<%=paygradelimit.name || ''%>" required="required" class="form-control">
        </div>

        <div class="form-group">
          <label for="leavecount">Leave Count</label>
          <input name="leaveCount" type="text" id="leavecount" value="<%=paygradelimit.leavecount || ''%>"  required="required" class="form-control">
        </div>

        <div class="form-group"> 
            <label for="paygradereset">Reset</label>
            <select name="paygradeReset" id="paygraderest"  required class="form-control custom-select">
                <option selected disabled>Select one</option>
                <option value='monthly'>Monthly</option>
                <option value='yearly'>Yearly</option>
            </select>
        </div>

        <div class="form-group">
          <input type="submit" value="Change Pay Grade Leave Limit" class="btn btn-success float-right">
        </div>
        </form>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>

<%-contentFor('styles')%>


<%-contentFor('scripts')%>