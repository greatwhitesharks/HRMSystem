<%- contentFor('body') %>

<div class="row">
  <div class="col-md">
    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title">PayGrade</h3>

        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fas fa-minus"></i></button>
        </div>
      </div>
      <div class="card-body">
        <form action="/paygrade/addpaygrade" enctype="application/x-www-form-urlencoded"  method="post">
        <div class="form-group">
          <label for="inputName">Pay Grade Name</label>
          <input name="payGradeName" ype="text" id="inputName" value="<%=paygrade.name || ''%>" required="required" class="form-control">
        </div>

        <div class="form-group">
          <label for="inputName">Minimum Salary</label>
          <input name="minSalary" type="text" id="inputName" value="<%=paygrade.minsalary || ''%>"  required="required" class="form-control">
        </div>

        <div class="form-group">
            <label for="inputName">Maximum Salary</label>
            <input name="maxSalary" type="text" id="inputName" value="<%=paygrade.maxsalary || ''%>"  required="required" class="form-control">
          </div>

          <div class="form-group">
            <label>Branch</label>
            <select name="branch" disabled class="form-control select2bs4" style="width: 100%;">
              <option selected="selected">Default</option>
            </select>
          </div>

        <div class="form-group">
          <input type="submit" value="Create Pay Grade" class="btn btn-success float-right">
        </div>
        </form>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>

<%-contentFor('styles')%>


<%-contentFor('scripts')%>